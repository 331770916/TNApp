<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="200dip" />
            <gradient
                android:startColor="@color/lineColor"
                android:centerColor="@color/lineColor"
                android:centerY="0.75"
                android:endColor="@color/lineColor"
                android:angle="270"
                />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <gradient
                    android:startColor="#801C86EE"
                    android:centerColor="#801C86EE"
                    android:centerY="0.75"
                    android:endColor="#a01C86EE"
                    android:angle="270"
                    />
                <corners android:radius="200dip" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="#ff1C86EE"
                    android:centerColor="#ff1C86EE"
                    android:centerY="0.75"
                    android:endColor="#ff1C86EE"
                    android:angle="270"
                    />
                <corners android:radius="200dip" />
            </shape>
        </clip>
    </item>

</layer-list>