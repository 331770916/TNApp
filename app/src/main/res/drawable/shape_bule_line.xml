<?xml version="1.0" encoding="UTF-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="line" >

    <!-- 填充的颜色：这里设置背景透明 -->
    <solid android:color="@color/blue" />
    <!-- 边框的颜色 ：不能和窗口背景色一样-->
    <stroke
            android:width="1dp"
            android:color="@color/blue" />
    <padding
        android:bottom="30dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp" />

</shape>