<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/downloadpdf_dialog_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/size20"
        android:layout_marginLeft="@dimen/size20"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialogDownloadTitle"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/size16"
            android:textSize="@dimen/txtSize13"
            android:textColor="#4d4d4d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:id="@+id/dialogDownloadProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/downloadPdfProgress_horizontal"/>


    </LinearLayout>

</RelativeLayout>