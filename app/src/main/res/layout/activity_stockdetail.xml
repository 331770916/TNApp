<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/portWholeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/rl_top_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size25"
            android:background="@color/colorMyGray"
            android:fitsSystemWindows="true"
            android:clipToPadding="true"/>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/detailTitleLayout"
                android:background="@color/colorMyGray"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pickerview_topbar_height"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/detail_back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="@dimen/pickerview_topbar_paddingleft"
                    android:src="@mipmap/back_btn"
                    android:scaleType="center"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/detail_topTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/txtSize14"
                        />
                    <TextView
                        android:id="@+id/detail_topTitleNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txtSize10"
                        android:text=""/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/detail_search"
                    android:src="@mipmap/search_btn_n"
                    android:padding="@dimen/pickerview_topbar_paddingright"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <com.tpyzq.mobile.pangu.activity.detail.DetailScrollView
                android:id="@+id/stkDetailScrollView"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:scrollbars="none"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/bgColor"
                    android:orientation="vertical">
                    <include layout="@layout/detail_top"/>

                    <include layout="@layout/detail_grideview"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="@dimen/size10"
                        android:background="@color/stkDetailDividerColor"
                        />
                    <LinearLayout
                        android:id="@+id/kchartLayout"
                        android:layout_width="match_parent"
                        android:layout_height="38dip"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/timeTv"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/timek"
                            android:textColor="@color/stkDetailBottomTextColor"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/fiveTv"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/fiveK"
                            android:textColor="@color/stkDetailBottomTextColor"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/dayTv"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/dayK"
                            android:textColor="@color/stkDetailBottomTextColor"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/weekTv"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/weekK"
                            android:textColor="@color/stkDetailBottomTextColor"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/mounthTv"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/mounthK"
                            android:textColor="@color/stkDetailBottomTextColor"
                            android:layout_height="match_parent" />

                        <RelativeLayout
                            android:id="@+id/minutesLayout"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/minutesTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:text="@string/minutesK"
                                android:textColor="@color/stkDetailBottomTextColor"
                                 />
                            <ImageView
                                android:layout_width="4dip"
                                android:layout_height="5dip"
                                android:src="@drawable/stk_icon_arrow"
                                android:layout_toRightOf  ="@+id/minutesTv"
                                android:layout_alignBottom="@+id/minutesTv"
                                />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:layout_marginTop="-1dip"
                        >
                        <ImageView
                            android:id="@+id/tab_img"
                            android:layout_width="10dip"
                            android:layout_height="match_parent"
                            android:background="@color/blue"
                            tools:ignore="ContentDescription" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/stkDetailDividerColor"
                        />
                    <FrameLayout
                        android:layout_marginTop="@dimen/size5"
                        android:id="@+id/chartFrameLayout"
                        android:layout_width="match_parent"
                        android:layout_height="230dip"
                        >
                        <LinearLayout
                            android:id="@+id/minChartWholeLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:paddingLeft="2dip"
                            android:orientation="horizontal"
                            >
                            <com.tpyzq.mobile.pangu.activity.detail.chart.MinChart
                                android:id="@+id/chartView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                />
                            <LinearLayout
                                android:id="@+id/pankouLayout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                android:orientation="vertical"
                                android:layout_weight="2"
                                >
                                <LinearLayout
                                    android:id="@+id/pankouTabLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="26dip"
                                    android:background="@drawable/stk_detail_left"
                                    android:orientation="horizontal"
                                    android:layout_marginLeft="5dip"
                                    android:layout_marginRight="5dip"
                                    android:layout_marginTop="2dip"
                                    >
                                    <TextView
                                        android:id="@+id/pankouView"
                                        android:layout_width="0dip"
                                        android:layout_height="match_parent"
                                        android:text="五档"
                                        android:textColor="@color/white"
                                        android:textSize="12dp"
                                        android:gravity="center"
                                        android:layout_weight="1"
                                        />
                                    <TextView
                                        android:id="@+id/mingxiView"
                                        android:layout_width="0dip"
                                        android:layout_height="match_parent"
                                        android:text="明细"
                                        android:textSize="12dp"
                                        android:textColor="@color/white"
                                        android:gravity="center"
                                        android:layout_weight="1"
                                        />
                                </LinearLayout>
                                <com.tpyzq.mobile.pangu.activity.home.information.view.HotAnalysisListView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="4dip"
                                    android:layout_marginLeft="5dip"
                                    android:layout_marginRight="5dip"
                                    android:id="@+id/pankouItemListView"
                                    android:dividerHeight="0px"
                                    android:divider="@color/white"
                                    ></com.tpyzq.mobile.pangu.activity.home.information.view.HotAnalysisListView>

                            </LinearLayout>
                        </LinearLayout>
                    </FrameLayout>



                    <LinearLayout
                        android:id="@+id/newsYanbaosLayout"
                        android:layout_marginTop="5dip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal">
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/F10Layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:background="@color/white"
                        android:orientation="horizontal">
                    </LinearLayout>
                </LinearLayout>
            </com.tpyzq.mobile.pangu.activity.detail.DetailScrollView>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/stkDetailDividerColor"
            />
        <LinearLayout
            android:id="@+id/detail_BottomLayout"
            android:layout_width="match_parent"
            android:layout_height="42dip"
            android:background="@color/bgColor"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/stk_detail_bottomBtn1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:src="@drawable/stk_icon_buy"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/buy"
                    android:textSize="14sp"
                    android:textColor="@color/stkDetailBottomTextColor"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/stk_detail_bottomBtn2"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:src="@drawable/stk_icon_sale"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sell"
                    android:textSize="14sp"
                    android:textColor="@color/stkDetailBottomTextColor"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/detail_share"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="18dip"
                    android:layout_height="18dip"
                    android:layout_marginRight="5dip"
                    android:src="@drawable/stk_icon_share"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/stkDetailBottomTextColor"
                    android:text="分享"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/stk_detail_bottomBtn3"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/stk_detail_bottomIV"
                    android:layout_width="18dip"
                    android:layout_height="18dip"
                    android:layout_marginRight="5dip"
                    android:src="@drawable/stk_icon_addself"
                    />
                <TextView
                    android:id="@+id/stk_detail_bottomTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="@string/addSelfChoice"
                    android:textColor="@color/stkDetailBottomTextColor"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/activity_stockdetail_land"/>
</FrameLayout>