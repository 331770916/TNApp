<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <com.tpyzq.mobile.pangu.view.progress.FornightHorizontalProgressBar
            android:id="@+id/otcProgress"
            style="@style/fortnightPro_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size10"
            android:layout_marginRight="@dimen/size10"
            android:layout_marginTop="@dimen/size10"
            android:max="100"
            android:paddingBottom="@dimen/size30"
            android:paddingTop="@dimen/size30"
            android:progress="50" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size10"
        android:background="@color/white"
        android:paddingTop="@dimen/size10"
        android:paddingBottom="@dimen/size10"
        android:text="产品说明"
        android:drawablePadding="@dimen/size10"
        android:drawableLeft="@mipmap/ic_otc_title"
        android:textColor="@color/black"
        android:textSize="@dimen/txtSize14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size0.5"
        android:background="@color/lineColor" />

    <com.tpyzq.mobile.pangu.view.gridview.MyListView
        android:id="@+id/otcProductIntrudceListView"
        android:divider="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size10"
        android:background="@color/white"
        android:paddingTop="@dimen/size10"
        android:paddingBottom="@dimen/size10"
        android:drawablePadding="@dimen/size10"
        android:drawableLeft="@mipmap/ic_otc_title"
        android:text="法律文件"
        android:textColor="@color/black"
        android:textSize="@dimen/txtSize14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size0.5"
        android:background="@color/lineColor" />

    <com.tpyzq.mobile.pangu.view.gridview.MyListView
        android:id="@+id/otcProductNoticeListView"
        android:divider="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/llayout_fengxian"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size10"
            android:background="@color/white"
            android:paddingTop="@dimen/size10"
            android:paddingBottom="@dimen/size10"
            android:drawablePadding="@dimen/size10"
            android:drawableLeft="@mipmap/ic_otc_title"
            android:text="服务协议及风险提示"
            android:textColor="@color/black"
            android:textSize="@dimen/txtSize14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size0.5"
            android:background="@color/lineColor" />

        <com.tpyzq.mobile.pangu.view.gridview.MyListView
            android:id="@+id/otcProductAgreementListView"
            android:divider="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <TextView
        android:id="@+id/precontract_flowText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/txtSize12"
        android:textColor="@color/blue"
        android:drawablePadding="@dimen/size5"
        android:padding="@dimen/size10"
        android:drawableLeft="@mipmap/ic_doubt"
        android:linksClickable="true"
        android:text="查看产品预约流程"/>


</LinearLayout>