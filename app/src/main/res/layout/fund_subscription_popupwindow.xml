<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/size15"
    android:background="@color/white">

    <!--标题-->
    <LinearLayout
        android:id="@+id/llFundSbuscribeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size20"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cbFundSubscribeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/xinxiqueren" />

        <TextView
            android:layout_width="5dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tvFundSubscribeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="场内基金认购"
            android:textColor="@color/textss"
            android:textSize="@dimen/txtSize16" />
    </LinearLayout>


    <!--中间部分的信息-->
    <LinearLayout
        android:id="@+id/llFundSubscribeMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llFundSbuscribeTitle"
        android:layout_marginTop="@dimen/size40"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--基金名称-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="基金名称:"
                    android:textColor="@color/texts"
                    android:textSize="@dimen/txtSize14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="股东账号:"
                    android:textColor="@color/texts"
                    android:textSize="@dimen/txtSize14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="认购金额:"
                    android:textColor="@color/texts"
                    android:textSize="@dimen/txtSize14" />
            </LinearLayout>


            <TextView
                android:layout_width="@dimen/size15"
                android:layout_height="wrap_content" />

            <!--信息-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCNJiJinMingCheng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/textss"
                    android:textSize="@dimen/txtSize14" />

                <TextView
                    android:id="@+id/tvCNJiJinDaiMa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/textss"
                    android:textSize="@dimen/txtSize14" />

                <TextView
                    android:id="@+id/tvCNShenGouJinE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/textss"
                    android:textSize="@dimen/txtSize14" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


    <!--确定   取消-->
    <LinearLayout
        android:id="@+id/llCNQueDing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llFundSubscribeMsg"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/size72">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tvCNQD"
                android:layout_width="155dp"
                android:layout_height="40dp"
                android:background="@color/blue"
                android:clickable="true"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tvCNQX"
                android:layout_width="155dp"
                android:layout_height="40dp"
                android:background="@color/dividerColor"
                android:clickable="true"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/hushenTab_titleColor"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
