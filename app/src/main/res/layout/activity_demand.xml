<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size25"
        android:background="@color/blue"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />


    <!-- 头布局 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <com.tpyzq.mobile.pangu.view.radiobutton.MyRadioButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:clickable="true"
                android:gravity="center"
                android:padding="@dimen/size10"
                android:text="@string/cxzy"
                android:textColor="@color/radio_textcolor_markettop" />

        </RadioGroup>

        <ImageView
            android:id="@+id/ivCNFund_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/size10"
            android:src="@mipmap/back_btn" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/wt"
            android:paddingLeft="@dimen/size5"
            android:paddingRight="@dimen/size5"
            android:paddingBottom="@dimen/size7"
            android:paddingTop="@dimen/size7"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size50"
            android:background="@color/white">

            <ImageView
                android:id="@+id/wt_item_iv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/size7"
                android:src="@mipmap/wt" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/wt_item_iv1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/wt_item_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wtcx"
                    android:textColor="@color/hushenTab_titleColor"
                    android:textSize="@dimen/txtSize14" />

            </LinearLayout>


            <ImageView
                android:id="@+id/wt_item_iv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/size7"
                android:src="@mipmap/youjiantou" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size0.5"
            android:layout_marginLeft="@dimen/size15"
            android:background="@color/lineColor" />


        <RelativeLayout
            android:id="@+id/cj"
            android:paddingLeft="@dimen/size5"
            android:paddingRight="@dimen/size5"
            android:paddingBottom="@dimen/size7"
            android:paddingTop="@dimen/size7"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size50"
            android:background="@color/white">

            <ImageView
                android:id="@+id/cj_item_iv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/size7"
                android:src="@mipmap/cj" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/cj_item_iv1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cj_item_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cjcx"
                    android:textColor="@color/hushenTab_titleColor"
                    android:textSize="@dimen/txtSize14" />

            </LinearLayout>


            <ImageView
                android:id="@+id/cj_item_iv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/size7"
                android:src="@mipmap/youjiantou" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size0.5"
            android:layout_marginLeft="@dimen/size15"
            android:background="@color/lineColor" />


        <RelativeLayout
            android:id="@+id/zj"
            android:paddingLeft="@dimen/size5"
            android:paddingRight="@dimen/size5"
            android:paddingBottom="@dimen/size7"
            android:paddingTop="@dimen/size7"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size50"
            android:background="@color/white">

            <ImageView
                android:id="@+id/zj_item_iv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/size7"
                android:src="@mipmap/zj" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/zj_item_iv1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/zj_item_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zjlscx"
                    android:textColor="@color/hushenTab_titleColor"
                    android:textSize="@dimen/txtSize14" />

            </LinearLayout>


            <ImageView
                android:id="@+id/zj_item_iv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/size7"
                android:src="@mipmap/youjiantou" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size0.5"
            android:layout_marginLeft="@dimen/size15"
            android:background="@color/lineColor" />


        <RelativeLayout
            android:id="@+id/jgd"
            android:paddingLeft="@dimen/size5"
            android:paddingRight="@dimen/size5"
            android:paddingBottom="@dimen/size7"
            android:paddingTop="@dimen/size7"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size50"
            android:background="@color/white">

            <ImageView
                android:id="@+id/jg_item_iv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/size7"
                android:src="@mipmap/jg" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/jg_item_iv1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/jg_item_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/DeliveryOrder"
                    android:textColor="@color/hushenTab_titleColor"
                    android:textSize="@dimen/txtSize14" />

            </LinearLayout>


            <ImageView
                android:id="@+id/jg_item_iv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/size7"
                android:src="@mipmap/youjiantou" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size0.5"
            android:background="@color/lineColor" />
    </LinearLayout>
</LinearLayout>