<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="@dimen/size10"
    android:paddingBottom="@dimen/size10"
    android:paddingRight="@dimen/size15"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size8"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/editSelfAllcheckBox"
            android:layout_gravity="center_vertical"
            android:button="@null"
            android:background="@drawable/edit_self_bx"
            android:scaleX="0.4"
            android:scaleY="0.4"
            android:layout_width="@dimen/size40"
            android:layout_height="@dimen/size40"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/bankInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="--"
            android:padding="@dimen/size5"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size57">

            <TextView
                android:id="@+id/zijindiaobo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/hideTextColor"
                android:layout_centerVertical="true"
                android:textSize="@dimen/txtSize14"
                android:text="调拨资金"/>

        <EditText
            android:id="@+id/collection_input"
            android:layout_toRightOf="@id/zijindiaobo"
            android:padding="@dimen/size5"
            android:layout_centerVertical="true"
            android:background="@drawable/collect_editbgg"
            android:singleLine="true"
            android:inputType="numberDecimal"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/txtSize12"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size30" />
        <TextView
            android:id="@+id/collection_unit"
            android:layout_toRightOf="@id/collection_input"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:padding="@dimen/size5"
            android:layout_height="wrap_content"
            android:textColor="@color/hideTextColor"
            android:textSize="@dimen/txtSize12"
            android:text="元"/>

        <TextView
            android:id="@+id/collection_useful"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/hideTextColor"
            android:text="可用金额"
            android:textSize="@dimen/txtSize12"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</LinearLayout>