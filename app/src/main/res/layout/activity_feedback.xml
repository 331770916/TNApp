<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size25"
        android:background="@color/blue"
        android:clipToPadding="true"
        android:id="@+id/rl_top_bar"
		android:fitsSystemWindows="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pickerview_topbar_height"
        android:background="@color/blue">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/size44"
            android:layout_height="@dimen/size44"
            android:layout_alignParentLeft="true"
            android:paddingLeft="@dimen/size20"
            android:paddingRight="@dimen/size20"
            android:scaleType="center"
            android:src="@mipmap/back_btn" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="意见反馈"
            android:textColor="@color/white"
            android:textSize="@dimen/pickerview_topbar_title_textsize" />
    </RelativeLayout>

    <EditText
        android:id="@+id/et_valuable_idea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/size20"
        android:layout_marginRight="@dimen/size20"
        android:gravity="top"
        android:hint="请输入您的意见或建议"
        android:inputType="textMultiLine"
        android:background="@drawable/rounded_edittext"
        android:minLines="8"
        android:maxLines="8"
        android:maxLength="200"
        android:scrollbars="vertical"
        android:textColorHint="@color/text"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_contact_way"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/size20"
        android:layout_marginRight="@dimen/size20"
        android:hint="请输入您的手机号码"
        android:inputType="number"
        android:background="@drawable/rounded_edittext"
        android:textColorHint="@color/text"
        android:textSize="16sp" />
    
    <Button
        android:id="@+id/bt_true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/button_login_pitchon"
        android:layout_marginTop="@dimen/size100"
        android:layout_marginLeft="@dimen/size20"
        android:layout_marginRight="@dimen/size20"
        android:textColor="@color/white"
        android:textSize="@dimen/txtSize14"
        android:text="提交"/>
</LinearLayout>