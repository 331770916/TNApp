<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/finncingLayout"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/moreLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size35">
        
        <ImageView
            android:layout_marginLeft="@dimen/size20"
            android:id="@+id/left_img"
            android:src="@mipmap/sy_wenying"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/size16"
            android:layout_height="@dimen/size17" />
        
        
        <TextView
            android:layout_toRightOf="@id/left_img"
            android:layout_marginLeft="@dimen/size4"
            android:id="@+id/homeHeadName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="稳赢理财"
            android:textColor="@color/black"
            android:textSize="@dimen/txtSize12"
            android:typeface="sans" />

        <ImageView
            android:id="@+id/homeHeadMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/size20"
            android:src="@mipmap/icon_right" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/lineColor" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size260"
        android:background="@color/white">

        <com.tpyzq.mobile.pangu.view.RiskControlView
            android:id="@+id/rcv_progress"
            android:layout_width="@dimen/size200"
            android:layout_height="@dimen/size200"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size50" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size20"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--天"
                android:textSize="@dimen/txtSize12"
                android:textColor="@color/orange2" />

            <TextView
                android:textColor="@color/texts"
                android:id="@+id/tv_text9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txtSize12"
                android:layout_marginTop="@dimen/size5"
                android:text="收益期限" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size20"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_text6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txtSize12"
                android:text="--元"
                android:textColor="@color/orange2" />

            <TextView
                android:textColor="@color/texts"
                android:id="@+id/tv_text10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txtSize12"
                android:layout_marginTop="@dimen/size5"
                android:text="起投金额" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/size20"
            android:textSize="@dimen/txtSize12"
            android:gravity="center"
            android:textColor="@color/newStockTitle"
            android:text="--" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:paddingLeft="@dimen/size3"
                android:paddingRight="@dimen/size3"
                android:textColor="@color/texts"
                android:id="@+id/tv_text1"
                android:textSize="@dimen/txtSize12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--" />

            <TextView
                android:id="@+id/tv_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size20"
                android:text="--"
                android:textColor="@color/orange2"
                android:textSize="@dimen/size30" />

            <TextView
                android:textColor="@color/texts"
                android:id="@+id/tv_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size5"
                android:textSize="@dimen/txtSize12"
                android:text="--" />

            <View
                android:layout_width="@dimen/size100"
                android:layout_height="@dimen/size1"
                android:layout_marginTop="@dimen/size5"
                android:background="@color/lineColor" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_text7"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size20"
            android:textSize="@dimen/txtSize12"
            android:gravity="center"
            android:paddingLeft="@dimen/size14"
            android:paddingRight="@dimen/size20"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/size20"
            android:textColor="@color/white" />

        <TextView
            android:textColor="@color/texts"
            android:id="@+id/tv_text8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/txtSize12"
            android:layout_marginTop="@dimen/size20"
            android:text="发行时间: --"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20%"
            android:layout_marginBottom="@dimen/size30"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/rcv_progress"
            android:textColor="@color/lineColor"
            android:textSize="@dimen/txtSize12"
            android:id="@+id/textView28" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:layout_marginLeft="@dimen/size10"
            android:textColor="@color/lineColor"
            android:layout_alignBaseline="@+id/textView28"
            android:layout_alignBottom="@+id/textView28"
            android:layout_alignLeft="@+id/rcv_progress"
            android:layout_alignStart="@+id/rcv_progress"
            android:textSize="@dimen/txtSize12"
            android:id="@+id/textView33" />
    </RelativeLayout>

    <com.tpyzq.mobile.pangu.activity.home.managerMoney.view.chartView.chart.MyLineChart
        android:id="@+id/item_newoptional_chart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size80"
        />

</LinearLayout>