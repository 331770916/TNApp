<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTabTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size19"
            android:layout_marginLeft="@dimen/size20"
            android:layout_marginRight="20dp"
            android:text=""
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/textss"/>

        <TextView
            android:id="@+id/tvTabDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTabTitle"
            android:layout_marginTop="@dimen/size10"
            android:layout_marginBottom="@dimen/size17"
            android:layout_marginLeft="@dimen/size20"
            android:text="--"
            android:textSize="12sp"
            android:textColor="@color/text"/>


        <RelativeLayout
            android:id="@+id/rlTabRelate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/size17"
            android:layout_below="@id/tvTabDate"
            android:layout_marginLeft="@dimen/size20">

            <TextView
                android:id="@+id/tvTabRelate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="相关股票："
                android:textSize="12sp"
                android:textColor="@color/text"/>

            <TextView
                android:id="@+id/tvTabRelateStock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tvTabRelate"
                android:text="三聚氰胺  互动娱乐"
                android:textSize="12sp"
                android:textColor="@color/blue"/>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
