<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/search_item_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:padding="@dimen/size10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/search_item_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txtSize14"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="海创B股"/>

        <TextView
            android:id="@+id/search_item_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txtSize12"
            android:textColor="@color/hideTextColor"
            android:text="1000000"/>
    </LinearLayout>


    <ImageView
        android:layout_toRightOf="@id/search_item_layout"
        android:id="@+id/search_item_iv2"
        android:src="@mipmap/hold_iv"
        android:layout_marginTop="@dimen/size15"
        android:layout_width="@dimen/size15"
        android:layout_height="@dimen/size15"
        tools:ignore="ContentDescription" />

    <ImageView
        android:layout_toRightOf="@id/search_item_iv2"
        android:id="@+id/search_item_iv3"
        android:src="@mipmap/hot_iv"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/size5"
        android:layout_marginTop="@dimen/size15"
        android:layout_width="@dimen/size15"
        android:layout_height="@dimen/size15"
        tools:ignore="ContentDescription" />


    <ImageView
        android:id="@+id/search_item_iv"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="@dimen/size10"
        android:layout_marginRight="@dimen/size10"
        android:src="@mipmap/search_add"
        tools:ignore="ContentDescription" />


</RelativeLayout>