<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_gray_rectangle"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/mistakeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:text="提 示"/>

    <LinearLayout
        android:id="@+id/ll_center_layout"
        android:layout_marginTop="15dp"
        android:layout_marginRight="26dp"
        android:layout_marginLeft="26dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <ScrollView
            android:fillViewport="true"
            android:layout_marginTop="1dp"
            android:id="@+id/ml_scroll"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:visibility="gone"
                    android:textColor="#000000"
                    android:text="尊敬的用户"
                    android:id="@+id/isShowOrhige"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_below="@id/isShowOrhige"
                    android:lineSpacingMultiplier="1.5"
                    android:id="@+id/mistakeMsg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#000000" />

            </RelativeLayout>
        </ScrollView>

    </LinearLayout>

    <View
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#c7c7c7"/>

    <RelativeLayout
        android:id="@+id/rl_center"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <Button
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="确定"
            android:id="@+id/mistakePositive"
            android:background="@drawable/shape_light_blue"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
    
    <RelativeLayout
        android:layout_marginTop="19dp"
        android:layout_marginBottom="20dp"
        android:visibility="gone"
        android:id="@+id/rl_center_two_button"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        
        <Button
            android:id="@+id/talk_later"
            android:layout_marginLeft="@dimen/size26"
            android:textColor="@color/title_list"
            android:background="@drawable/shape_light_gray"
            android:text="以后再说"
            android:layout_width="110dp"
            android:layout_height="30dp" />

        <Button
            android:id="@+id/present_evaluation"
            android:layout_marginRight="@dimen/size26"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:background="@drawable/shape_light_blue"
            android:text="现在评测"
            android:layout_width="110dp"
            android:layout_height="30dp" />
        
    </RelativeLayout>



</LinearLayout>