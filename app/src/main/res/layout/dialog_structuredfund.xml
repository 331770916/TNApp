<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size30"
        android:layout_marginTop="@dimen/size20"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bank_img"
            android:layout_width="@dimen/size18"
            android:layout_height="@dimen/size18"
            android:src="@mipmap/bank_img" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/size9"
            android:text="基金认购"
            android:textColor="@color/black"
            android:textSize="@dimen/txtSize16"
            android:textStyle="bold" />


    </LinearLayout>

    <TextView
        android:id="@+id/tv_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text=""
        android:visibility="gone" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size20"
        android:layout_marginTop="@dimen/size40"
        android:orientation="vertical">

        <TableRow
            android:id="@+id/tableRow1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/czlb"
                android:textColor="@color/text" />

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size10"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/txtSize14" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_marginTop="@dimen/size10"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jjdm"
                android:textColor="@color/text" />

            <TextView
                android:id="@+id/tv_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size10"
                android:text=""
                android:textColor="@color/black" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_marginTop="@dimen/size10"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/securities_name"
                android:textColor="@color/text" />

            <TextView
                android:id="@+id/tv_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size10"
                android:text=""
                android:textColor="@color/black" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_marginTop="@dimen/size10"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fced"
                android:textColor="@color/text" />

            <TextView
                android:id="@+id/tv_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size10"
                android:text=""
                android:textColor="@color/black" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_marginTop="@dimen/size10"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="股东代码："
                android:textColor="@color/text" />

            <TextView
                android:id="@+id/tv_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size10"
                android:text=""
                android:textColor="@color/black" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_marginTop="@dimen/size10"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="股东代码："
                android:textColor="@color/text" />

            <TextView
                android:id="@+id/tv_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size10"
                android:text=""
                android:textColor="@color/black" />
        </TableRow>


    </TableLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/size20">

        <Button
            android:id="@+id/bt_false"
            android:layout_width="0dp"
            android:layout_height="@dimen/size50"
            android:layout_weight="1"
            android:background="@color/grey"
            android:text="取消"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/bt_true"
            android:layout_width="0dp"
            android:layout_height="@dimen/size50"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/size20"
            android:background="@color/blue"
            android:text="确定"
            android:textColor="@color/white" />

    </LinearLayout>
</LinearLayout>