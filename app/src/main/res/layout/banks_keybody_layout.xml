            android:paddingTop="@dimen/size15"
            android:paddingBottom="@dimen/size15"
            android:textColor="@color/black"
            android:text="9"
            android:textSize="@dimen/txtSize20" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size0.5"
        android:background="@color/hideTextColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/keyboard_positiveBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="@dimen/size15"
            android:paddingBottom="@dimen/size15"
            android:background="@drawable/keyboard_bg"
            android:text="@string/pickerview_submit"
            android:textColor="@color/black"
            android:textSize="@dimen/txtSize20" />

        <View
            android:layout_width="@dimen/size0.5"
            android:layout_height="match_parent"
            android:background="@color/hideTextColor" />

        <TextView
            android:id="@+id/keyboard_num0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/keyboard_bg"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="@dimen/size15"
            android:paddingBottom="@dimen/size15"
            android:textColor="@color/black"
            android:text="0"
            android:textSize="@dimen/txtSize20" />

        <View
            android:layout_width="@dimen/size0.5"
            android:layout_height="match_parent"
            android:background="@color/hideTextColor" />

        <ImageView
            android:id="@+id/keyboard_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="@dimen/size15"
            android:paddingBottom="@dimen/size15"
            android:background="@color/bgColor"
            android:src="@android:drawable/ic_input_delete"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size0.5"
        android:background="@color/hideTextColor" />

</LinearLayout>