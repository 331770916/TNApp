<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bgColor"
    tools:context="com.tpyzq.mobile.pangu.activity.trade.otc_business.OTC_AccountActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size25"
        android:background="@color/blue"
        android:clipToPadding="true"
        android:id="@+id/rl_top_bar"
		android:fitsSystemWindows="true" />

    <!-- 头布局 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pickerview_topbar_height"
        android:background="@color/blue">

        <ImageView
            android:id="@+id/ivOTC_Account_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:paddingLeft="@dimen/size15"
            android:paddingRight="@dimen/size20"
            android:src="@mipmap/back_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/OTC_zhanghu"
            android:textColor="@color/white"
            android:textSize="@dimen/title_big_textsize" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlOTC_OpenAccount"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size50"
            android:background="@color/white"
            android:paddingBottom="@dimen/size7"
            android:paddingLeft="@dimen/size5"
            android:paddingRight="@dimen/size5"
            android:paddingTop="@dimen/size7">

            <ImageView
                android:id="@+id/ivOTC_OpenAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/size7"
                android:src="@mipmap/otckaihu" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/ivOTC_OpenAccount"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/wt_item_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/OTC_kaihu"
                    android:textColor="@color/title_list"
                    android:textSize="@dimen/txtSize15" />

            </LinearLayout>


            <ImageView
                android:id="@+id/wt_item_iv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/size7"
                android:src="@mipmap/youjiantou" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size0.5"
            android:layout_marginLeft="@dimen/size15"
            android:background="@color/lineColor" />


        <RelativeLayout
            android:id="@+id/rlOTC_AccountQuery"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size50"
            android:background="@color/white"
            android:paddingBottom="@dimen/size7"
            android:paddingLeft="@dimen/size5"
            android:paddingRight="@dimen/size5"
            android:paddingTop="@dimen/size7">

            <ImageView
                android:id="@+id/ivOTC_AccountQuery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/size7"
                android:src="@mipmap/otczhanghuchaxun" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/ivOTC_AccountQuery"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cj_item_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/OTC_zhanghuchaxun"
                    android:textColor="@color/title_list"
                    android:textSize="@dimen/txtSize15" />

            </LinearLayout>


            <ImageView
                android:id="@+id/cj_item_iv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/size7"
                android:src="@mipmap/youjiantou" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size0.5"
            android:background="@color/lineColor" />
    </LinearLayout>
</LinearLayout>
