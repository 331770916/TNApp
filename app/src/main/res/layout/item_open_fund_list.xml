<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_item_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:paddingBottom="@dimen/size15"
        android:paddingTop="@dimen/size15"
        android:scaleType="center"
        android:src="@mipmap/open_fenhongshezhi" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:textSize="@dimen/txtSize15"
            android:textColor="@color/title_list"
            android:id="@+id/tv_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分红设置" />
        <TextView
            android:id="@+id/tv_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txtSize12"
            android:textColor="@color/text"
            android:text="设置基金分红方式为现金分红或红利再投"/>
    </LinearLayout>

    <ImageView
        android:layout_marginRight="@dimen/size20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/youjiantou" />
</LinearLayout>