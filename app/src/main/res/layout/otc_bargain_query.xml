<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_OTCBargainZiDingYi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bgColor"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size10"
            android:background="@color/bgColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size35"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_OTCBargainZDYStartDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size22"
                android:layout_weight="1.5"
                android:drawableLeft="@mipmap/rililan"
                android:drawablePadding="@dimen/size10"
                android:drawableRight="@mipmap/sanjiao"
                android:gravity="center|end"
                android:paddingRight="@dimen/size13"
                android:text="2016-07-07"
                android:textColor="@color/hideTextColor"
                android:textSize="@dimen/txtSize12" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.4"
                android:gravity="center"
                android:text="至"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/tv_OTCBargainZDYEndDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawableRight="@mipmap/sanjiao"
                android:gravity="center"
                android:text="2016-07-07"
                android:textColor="@color/hideTextColor"
                android:textSize="@dimen/txtSize12" />


            <TextView
                android:id="@+id/tv_OTCBargainZDYQueryBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/size15"
                android:layout_weight="1"
                android:background="@color/calendarBtnColor"
                android:gravity="center"
                android:text="查询"
                android:textColor="@color/white" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size10"
            android:background="@color/bgColor" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/llOTCBargainTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size30"
        android:layout_below="@id/ll_OTCBargainZiDingYi"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/size20"
        android:paddingRight="@dimen/size15">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|fill"
            android:paddingLeft="@dimen/size4"
            android:text="名称"
            android:textColor="@color/newStockTitle"
            android:textSize="@dimen/txtSize12" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="成交日期"
            android:textColor="@color/newStockTitle"
            android:textSize="@dimen/txtSize12" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="业务名称"
            android:textColor="@color/newStockTitle"
            android:textSize="@dimen/txtSize12" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|end"
            android:text="成交金额/份额"
            android:textColor="@color/newStockTitle"
            android:textSize="@dimen/txtSize12" />
    </LinearLayout>

    <View
        android:id="@+id/OTCBargainFenGe"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size0.5"
        android:layout_below="@+id/llOTCBargainTitle"
        android:background="@color/lineColor" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/OTCBargainFenGe">

        <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:id="@+id/rl_OTCBargainRefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            app:ptrAnimationStyle="flip"
            app:ptrMode="pullFromStart" />


        <ImageView
            android:id="@+id/OTCBargainKong"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="center"
            android:src="@mipmap/kong"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>
