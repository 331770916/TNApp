<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rlShareTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size30">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="分享给好友"
            android:textSize="15sp"
            android:textColor="@color/normalRadioBtnColor"/>

        <TextView
            android:id="@+id/tvZuoBian"
            android:layout_width="@dimen/size78"
            android:layout_height="@dimen/size0.5"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tvTitle"
            android:layout_marginRight="@dimen/size16"
            android:background="@color/normalRadioBtnColor"/>

        <TextView
            android:id="@+id/tvYouBian"
            android:layout_width="@dimen/size78"
            android:layout_height="@dimen/size0.5"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tvTitle"
            android:layout_marginLeft="@dimen/size16"
            android:background="@color/normalRadioBtnColor"/>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/rlShareIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size35"
        android:layout_marginRight="@dimen/size35"
        android:layout_below="@id/rlShareTitle"
        android:layout_marginTop="@dimen/size42">

        <LinearLayout
            android:id="@+id/llWeiXin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/share_weixin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size9"
                android:text="微信好友"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/llPengYQ"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/fx_pengyouquan"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size9"
                android:text="朋友圈"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/llQQ"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/share_qq"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size9"
                android:text="QQ好友"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/llWeiBo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/share_weibo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size9"
                android:text="新浪微博"/>

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/tvShareQuXiao"
        android:layout_width="@dimen/size330"
        android:layout_height="@dimen/size40"
        android:layout_below="@id/rlShareIcon"
        android:layout_marginTop="@dimen/size40"
        android:layout_marginBottom="@dimen/size25"
        android:background="@drawable/lonin"
        android:text="取消"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:clickable="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
