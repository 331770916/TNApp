<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/detail_top_Part2Layout"
        android:layout_height="@dimen/StockDetailPart1Hei"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            >
            <TextView
                android:id="@+id/detail_top_nowpirce"
                android:layout_marginTop="10dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/stockDetailNowPiceSize"
                android:textStyle="bold"
                android:text="--"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="13dip"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/detail_top_diff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dip"
                    android:textColor="@color/white"
                    android:textSize="@dimen/stockDetailOtherSize"
                    android:text="--"
                    android:layout_alignParentBottom="true"
                    />
                <TextView
                    android:id="@+id/detail_top_range"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:layout_toRightOf="@+id/detail_top_diff"
                    android:textSize="@dimen/stockDetailOtherSize"
                    android:text="--"
                    android:layout_alignParentBottom="true"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/detail_top_Number3"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/stockDetailOtherSize"
                    android:text="--"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    />
                <TextView
                    android:id="@+id/detail_top_Number4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/stockDetailOtherSize"
                    android:text="--"
                    android:layout_toLeftOf="@+id/detail_top_Number3"
                    android:layout_marginRight="@dimen/size10"
                    android:layout_alignParentBottom="true"
                     />
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>