<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_capital"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size200">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5">

            <com.tpyzq.mobile.pangu.view.pieChart.PieChart
                android:id="@+id/pc_capital"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="今日资金"
                android:textSize="@dimen/size12" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size15"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size10"
                    android:layout_weight="1"
                    android:text="主力"
                    android:textSize="@dimen/txtSize13" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size10"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="散户"
                    android:textSize="@dimen/txtSize13" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size10"
                    android:layout_weight="1"
                    android:text="流入"
                    android:textColor="@color/text"
                    android:textSize="@dimen/txtSize12" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size10"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="单位：万"
                    android:textColor="@color/text"
                    android:textSize="@dimen/txtSize12" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size1"
                android:layout_marginBottom="@dimen/size3"
                android:layout_marginTop="@dimen/size3"
                android:background="@color/bgColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_main_entry"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size10"
                    android:layout_weight="1"
                    android:text="--.--"
                    android:textColor="@color/red"
                    android:textSize="@dimen/txtSize14" />

                <TextView
                    android:id="@+id/tv_other_entry"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size10"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="--.--"
                    android:textColor="@color/red2"
                    android:textSize="@dimen/txtSize14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size10"
                    android:layout_weight="1"
                    android:text="流出"
                    android:textColor="@color/text"
                    android:textSize="@dimen/txtSize12" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size10"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/text"
                    android:textSize="@dimen/txtSize12" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size1"
                android:layout_marginBottom="@dimen/size3"
                android:layout_marginTop="@dimen/size3"
                android:background="@color/bgColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_main_exit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size10"
                    android:layout_weight="1"
                    android:text="--.--"
                    android:textColor="@color/green2"
                    android:textSize="@dimen/txtSize14" />

                <TextView
                    android:id="@+id/tv_other_exit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size10"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="--.--"
                    android:textColor="@color/green1"
                    android:textSize="@dimen/txtSize14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size10"
                    android:layout_weight="1"
                    android:text="净流入"
                    android:textColor="@color/text"
                    android:textSize="@dimen/txtSize12" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size10"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/text"
                    android:textSize="@dimen/txtSize12" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size1"
                android:layout_marginBottom="@dimen/size3"
                android:layout_marginTop="@dimen/size3"
                android:background="@color/bgColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_main_entry_val"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size10"
                    android:layout_weight="1"
                    android:text="--.--"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txtSize14" />

                <TextView
                    android:id="@+id/tv_other_entry_val"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size10"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="--.--"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txtSize14" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size1"
        android:layout_marginLeft="@dimen/size20"
        android:layout_marginRight="@dimen/size20"
        android:background="@color/bgColor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size20"
        android:text="最近五日主力增减仓"
        android:textSize="@dimen/txtSize16" />

    <com.tpyzq.mobile.pangu.view.histogram.Histogram
        android:id="@+id/histogram"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size150"
        android:layout_marginTop="@dimen/size20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size10"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size25"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal">

            <View
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shape_red_round" />

            <TextView
                android:id="@+id/tv_open_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size10"
                android:text="资金流入"
                android:textColor="@color/black"
                android:textSize="@dimen/txtSize12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size25"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shape_green_round" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size10"
                android:text="资金流出"
                android:textColor="@color/black"
                android:textSize="@dimen/txtSize12" />
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/size25"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:text="单位：万元"
            android:textSize="@dimen/txtSize12" />
    </LinearLayout>
</LinearLayout>