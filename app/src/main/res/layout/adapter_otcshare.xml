<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <TextView
        android:id="@+id/otcShareStockInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/size10"
        android:paddingLeft="@dimen/size20"
        android:paddingTop="@dimen/size10"
        android:text="--"
        android:textColor="@color/hushenTab_titleColor"
        android:textSize="@dimen/txtSize14" />

    <View

        android:layout_width="match_parent"
        android:layout_height="@dimen/size0.5"
        android:layout_marginLeft="@dimen/size20"
        android:background="@color/lineColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/size20">

        <LinearLayout
            android:paddingRight="@dimen/size30"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/otcSharePrice"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size30"
                android:gravity="center"
                android:padding="@dimen/size5"
                android:text="--"
                android:textColor="@color/red"
                android:textSize="@dimen/txtSize16" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="已投金额"
                android:textColor="@color/text"
                android:textSize="@dimen/txtSize12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/otcShareIntoDate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size30"
                android:gravity="center|fill"
                android:text="购入日期：--"
                android:textColor="@color/text"
                android:textSize="@dimen/txtSize12" />

            <TextView
                android:id="@+id/otcShareOutDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|fill"
                android:text="到期日期：--"
                android:textColor="@color/text"
                android:textSize="@dimen/txtSize12" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size10"
        android:paddingLeft="@dimen/size10"
        android:paddingRight="@dimen/size10">

        <RelativeLayout
            android:layout_marginTop="@dimen/size3"
            android:id="@+id/otcUPdownIv"
            android:gravity="center|end"
            android:layout_width="70dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_alignParentRight="true"
                android:paddingRight="@dimen/size2"
                android:id="@+id/otcUPdownIv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/otcshare_down" />
        </RelativeLayout>


        <LinearLayout
            android:gravity="center|fill_horizontal"
            android:id="@+id/llYinCang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/otcUPdownIv"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/size20"
            android:visibility="visible">

            <TextView
                android:id="@+id/otcShareShuHuibtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_product_buy_btnbg"
                android:gravity="center"
                android:paddingBottom="@dimen/size4"
                android:paddingLeft="@dimen/size30"
                android:paddingRight="@dimen/size30"
                android:paddingTop="@dimen/size4"
                android:text="赎回"
                android:textColor="@color/white" />


            <TextView
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size10"
                android:text="产品到期不赎回，自动进入下一期"
                android:textColor="@color/text"
                android:textSize="@dimen/txtSize10" />
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size10"
        android:layout_marginTop="@dimen/size10"
        android:background="@color/bgColor" />

</LinearLayout>