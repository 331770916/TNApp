<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/size4"
        android:scrollbars="none">
        <LinearLayout
            android:id="@+id/bgLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/calendarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/size20"
                android:paddingTop="@dimen/size20">

                <TextView
                    android:id="@+id/xgrltv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/size20"
                    android:drawableLeft="@mipmap/rili"
                    android:drawablePadding="@dimen/size5"
                    android:gravity="center"
                    android:text="@string/newStockCalendar"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size13" />

                <TextView
                    android:id="@+id/newStockHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/size10"
                    android:layout_alignParentRight="true"
                    android:text="@string/jrwxgfx"
                    android:drawablePadding="@dimen/size5"
                    android:textColor="@color/blue"
                    android:drawableRight="@mipmap/more"
                    android:textSize="@dimen/size13" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size0.5"
                android:background="@color/lineColor"/>

            <com.tpyzq.mobile.pangu.view.gridview.MyListView
                android:id="@+id/todayNewStockListView"
                android:divider="@null"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:id="@+id/ll_OneTimeShenGou"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/calendarBtnColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size10"
                    android:layout_margin="@dimen/size15"
                    android:gravity="center"
                    android:background="@drawable/shape_product_buy_btnbg"
                    android:text="@string/yjsg"
                    android:textColor="@color/white" />
            </LinearLayout>



            <com.tpyzq.mobile.pangu.view.gridview.MyListView
                android:id="@+id/intToMarketListView"
                android:divider="@null"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <com.tpyzq.mobile.pangu.view.gridview.MyListView
                android:id="@+id/NewListView"
                android:divider="@null"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>
    </ScrollView>



</LinearLayout>
