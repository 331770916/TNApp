<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size40"
    android:layout_alignParentBottom="true">
    <RelativeLayout
        android:id="@+id/managerDetailBuyLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/counter"
            android:layout_width="@dimen/size60"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:background="#EF9201">
            <ImageView
                android:layout_width="@dimen/size20"
                android:layout_height="@dimen/size20"
                android:layout_centerInParent="true"
                android:src="@mipmap/counter"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/fornightBuyBtn"
            android:layout_toLeftOf="@id/counter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size40"
            android:background="@color/calendarBtnColor"
            android:gravity="center"
            android:textColor="@color/white"
            android:visibility="gone"
            android:text="立即购买"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/managerDetailTargetLayout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/targetTouBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#F29527"
            android:text="定投"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/targetBuyBtn"
            android:layout_width="0dp"
            android:background="#F2AD27"
            android:text="立即购买"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
    </LinearLayout>
</FrameLayout>