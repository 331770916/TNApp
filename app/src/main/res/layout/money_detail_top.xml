<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size200"
    android:background="@mipmap/manager_detail_top_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        <TextView
            android:id="@+id/managerMoenyDetailFundName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:padding="@dimen/size5"
            android:layout_margin="@dimen/size10"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:textSize="@dimen/txtSize16"/>
        <TextView
            android:id="@+id/managerMoenyDetailfundType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:padding="@dimen/size5"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/size10"
            android:textSize="@dimen/txtSize12"
            android:background="@drawable/shape_manager_money_changebtn"
            android:gravity="center"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/managerMoenyDetailFundRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/managerMoenyDetailFundRadioDisrib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txtSize10"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/managerMoenyDetailFundBotom1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/txtSize12"
            android:padding="@dimen/size10"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/managerMoenyDetailFundBotom2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/txtSize12"
            android:padding="@dimen/size10"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/managerMoenyDetailFundBotom3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/txtSize12"
            android:padding="@dimen/size10"
            android:gravity="center"
            android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>