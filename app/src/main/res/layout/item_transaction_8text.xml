<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size5"
            android:layout_marginTop="@dimen/size5"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/size2"
                android:paddingLeft="@dimen/size20"
                android:paddingTop="@dimen/size2"
                android:maxLines="1"
                android:text="锦富新材"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:textSize="@dimen/txtSize13" />

            <TextView
                android:id="@+id/tv_text2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/size2"
                android:paddingLeft="@dimen/size20"
                android:paddingTop="@dimen/size2"
                android:text="237476.00"
                android:textColor="@color/text"
                android:textSize="@dimen/txtSize13" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/size5"
            android:layout_marginTop="@dimen/size5"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_text3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="@dimen/size2"
                android:paddingTop="@dimen/size2"
                android:text="-836"
                android:textSize="@dimen/txtSize13" />

            <TextView
                android:id="@+id/tv_text4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="@dimen/size2"
                android:paddingTop="@dimen/size2"
                android:text="-4.5%"
                android:textSize="@dimen/txtSize13" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_3"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/size5"
            android:layout_marginTop="@dimen/size5"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_text5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="@dimen/size2"
                android:paddingTop="@dimen/size2"
                android:text="5000"
                android:textColor="@color/textss"
                android:textSize="@dimen/txtSize13" />

            <TextView
                android:id="@+id/tv_text6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="@dimen/size2"
                android:paddingTop="@dimen/size2"
                android:text="5000"

                android:textColor="@color/textss"
                android:textSize="@dimen/txtSize13" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_4"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/size5"
            android:layout_marginTop="@dimen/size5"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_text7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="@dimen/size2"
                android:paddingTop="@dimen/size2"
                android:text="30.59"
                android:textColor="@color/textss"
                android:textSize="@dimen/txtSize13" />

            <TextView
                android:id="@+id/tv_text8"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="@dimen/size2"
                android:paddingTop="@dimen/size2"
                android:text="34.63"
                android:textColor="@color/textss"
                android:textSize="@dimen/txtSize13" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size1"
        android:layout_marginLeft="@dimen/size20"
        android:background="@color/lineColor" />
</LinearLayout>