<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <com.tpyzq.mobile.pangu.view.progress.FornightHorizontalProgressBar
            android:id="@+id/fortnightProgress"
            style="@style/fortnightPro_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size10"
            android:layout_marginRight="@dimen/size10"
            android:layout_marginTop="@dimen/size10"
            android:max="100"
            android:paddingBottom="@dimen/size30"
            android:paddingTop="@dimen/size30"
            android:progress="50" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size10"
        android:background="@color/white"
        android:padding="@dimen/size10"
        android:text="产品说明"
        android:textColor="@color/hushenTab_titleColor"
        android:textSize="@dimen/txtSize14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size0.5"
        android:background="@color/lineColor" />

    <com.tpyzq.mobile.pangu.view.gridview.MyListView
        android:id="@+id/fornightProductIntrudceListView"
        android:divider="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size10"
        android:background="@color/white"
        android:padding="@dimen/size10"
        android:text="产品公告"
        android:textColor="@color/hushenTab_titleColor"
        android:textSize="@dimen/txtSize14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size0.5"
        android:background="@color/lineColor" />

    <com.tpyzq.mobile.pangu.view.gridview.MyListView
        android:id="@+id/fornightProductNoticeListView"
        android:divider="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size10"
        android:background="@color/white"
        android:padding="@dimen/size10"
        android:text="服务协议及风险提示"
        android:textColor="@color/hushenTab_titleColor"
        android:textSize="@dimen/txtSize14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size0.5"
        android:background="@color/lineColor" />

    <com.tpyzq.mobile.pangu.view.gridview.MyListView
        android:id="@+id/fornightProductAgreementListView"
        android:divider="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>