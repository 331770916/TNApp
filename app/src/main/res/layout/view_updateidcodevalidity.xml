<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/texts"
                android:text="姓名"
                android:padding="@dimen/size10"/>

            <TextView
                android:id="@+id/tv_effective_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/hushenTab_titleColor"
                android:padding="@dimen/size10"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/size10"
            android:background="@color/lineColor" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/texts"
                android:text="身份证号"
                android:padding="@dimen/size10"/>

            <TextView
                android:id="@+id/tv_effective_idNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/hushenTab_titleColor"
                android:padding="@dimen/size10"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/size10"
            android:background="@color/lineColor" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/texts"
                android:text="签发机关"
                android:padding="@dimen/size10"/>

            <EditText
                android:id="@+id/tv_effective_grovement"
                android:layout_width="@dimen/size200"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txtSize14"
                android:layout_alignParentRight="true"
                android:background="@color/white"
                android:lineSpacingExtra="@dimen/size2"
                android:gravity="center|end"
                android:textColor="@color/hushenTab_titleColor"
                android:padding="@dimen/size10"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/size10"
            android:background="@color/lineColor" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/texts"
                android:text="身份证地址"
                android:padding="@dimen/size10"/>

            <EditText
                android:id="@+id/tv_effective_address"
                android:layout_width="@dimen/size200"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:lineSpacingExtra="@dimen/size2"
                android:background="@color/white"
                android:gravity="center|end"
                android:textSize="@dimen/txtSize14"
                android:textColor="@color/hushenTab_titleColor"
                android:padding="@dimen/size10"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/size10"
            android:background="@color/lineColor" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/texts"
                android:text="有效期"
                android:padding="@dimen/size10"/>

            <LinearLayout
                android:id="@+id/rg_effective"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rb_effective_longTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size5"
                    android:button="@null"
                    android:layout_gravity="end"
                    android:drawablePadding="@dimen/size10"
                    android:textColor="@color/hushenTab_titleColor"
                    android:text="长期"
                    android:drawableRight="@drawable/update_idcard_checkbox"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/effective_startTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/effectiveTimeStrTag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\u3000至\u3000"/>

                    <TextView
                        android:id="@+id/effective_endTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <RadioButton
                        android:id="@+id/rb_effective_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:padding="@dimen/size5"
                        android:drawablePadding="@dimen/size10"
                        android:drawableRight="@drawable/update_idcard_checkbox"/>

                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</ScrollView>