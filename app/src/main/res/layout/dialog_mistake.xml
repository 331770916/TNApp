<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_gray_rectangle">

    <TextView
        android:id="@+id/mistakeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/txtSize12"
        android:padding="@dimen/size10"
        android:text="@string/hintTv"/>

    <TextView
        android:id="@+id/mistakeMsg"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="sdfasf"
        android:layout_marginLeft="@dimen/size10"
        android:layout_marginRight="@dimen/size10"
        android:textColor="@color/black"
        android:layout_marginBottom="@dimen/size10"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/mistakePositive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/size10"
        android:paddingLeft="@dimen/size15"
        android:paddingRight="@dimen/size15"
        android:paddingTop="@dimen/size5"
        android:paddingBottom="@dimen/size5"
        android:textColor="@color/white"
        android:background="@color/blue"
        android:textSize="@dimen/txtSize12"
        android:gravity="center"
        android:text="@string/pickerview_submit" />

</LinearLayout>