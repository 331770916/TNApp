<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size10"
        android:layout_marginLeft="@dimen/size20"
        android:layout_marginTop="@dimen/size20"
        android:text="根据交易所规定，创业板需提供一位紧急联系人"
        android:textColor="@color/texts" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="183dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size60">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/size20"
                android:gravity="center"
                android:text="第二联系人姓名"
                android:textColor="@color/textss" />

            <EditText
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:hint="输入第二联系人姓名"
                android:paddingLeft="@dimen/size20"
                android:background="@android:color/transparent"
                android:textColorHint="@color/texts" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size1"
            android:layout_marginLeft="@dimen/size20"
            android:background="@color/lineColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size60">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/size20"
                android:gravity="center"
                android:text="第二联系人电话"
                android:textColor="@color/textss" />

            <EditText
                android:id="@+id/tv_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:hint="输入第二联系人电话"
                android:background="@android:color/transparent"
                android:paddingLeft="@dimen/size20"
                android:textColorHint="@color/texts" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size1"
            android:layout_marginLeft="@dimen/size20"
            android:background="@color/lineColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size60">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/size20"
                android:gravity="center"
                android:text="与联系人关系"
                android:textColor="@color/textss" />

            <TextView
                android:id="@+id/tv_relationship"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="@dimen/size5"
                android:drawableRight="@mipmap/more"
                android:gravity="center_vertical|right"
                android:hint="选择与联系人关系"
                android:paddingRight="@dimen/size20"
                android:textColorHint="@color/texts" />
        </LinearLayout>

        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/size1"-->
        <!--android:background="@color/lineColor" />-->
    </LinearLayout>

    <Button
        android:id="@+id/bt_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size40"
        android:layout_marginLeft="@dimen/size20"
        android:layout_marginRight="@dimen/size20"
        android:layout_marginTop="@dimen/size100"
        android:background="@drawable/button_login_pitchon"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/white" />
</LinearLayout>