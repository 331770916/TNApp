            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_marginLeft="@dimen/size12"-->
            <!--android:src="@mipmap/shengoueduguize" />-->

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_marginLeft="@dimen/size8"-->
            <!--android:layout_toRightOf="@id/ivSubscribeLimitRule"-->
            <!--android:text="申购额度规则" />-->
    <!--</RelativeLayout>-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size2"
        android:background="@color/bgColor" />

    <WebView
        android:id="@+id/wvSubscribeLimitRule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </WebView>

</LinearLayout>
