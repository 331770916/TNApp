<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_color_mask"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size50"
        android:scaleType="center"
        android:src="@mipmap/item_green"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size51"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/size5"
                android:layout_marginLeft="@dimen/size10"
                android:layout_marginTop="@dimen/size5"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/selfchoice_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="@color/hushenTab_titleColor"
                    android:textSize="@dimen/self_stockNameText"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/selfchoice_Number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/selfchoice_Name"
                    android:layout_below="@id/selfchoice_Name"
                    android:text="--"
                    android:textColor="@color/hideTextColor"
                    android:textSize="@dimen/self_stockNumberText" />

                <ImageView
                    android:id="@+id/selfchoice_HoldIc"
                    android:layout_width="@dimen/size15"
                    android:layout_height="@dimen/size15"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="@dimen/size2"
                    android:layout_toEndOf="@+id/selfchoice_Name"
                    android:layout_toRightOf="@+id/selfchoice_Name"
                    android:src="@mipmap/hold_iv" />

                <ImageView
                    android:id="@+id/selfchoice_HotIc"
                    android:layout_width="@dimen/size15"
                    android:layout_height="@dimen/size15"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="@dimen/size2"
                    android:layout_toEndOf="@+id/selfchoice_HoldIc"
                    android:layout_toRightOf="@+id/selfchoice_HoldIc"
                    android:src="@mipmap/hot_iv" />

            </RelativeLayout>

            <TextView
                android:id="@+id/selfchoice_Price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/size5"
                android:layout_marginTop="@dimen/size5"
                android:layout_weight="1"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/hushenTab_titleColor"
                android:textSize="@dimen/self_stockNumberPrice" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size5"
                android:layout_marginTop="@dimen/size5"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/selfchoice_zdf"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/size5"
                    android:layout_marginLeft="@dimen/size15"
                    android:layout_marginRight="@dimen/size15"
                    android:layout_marginTop="@dimen/size5"
                    android:layout_weight="1"
                    android:background="@color/hideTextColor"
                    android:gravity="center"
                    android:padding="@dimen/size5"
                    android:text="0.03"
                    android:textColor="@color/white"
                    android:textSize="@dimen/self_stockNumberZdf" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/size10"
        android:background="@color/lineColor" />


</FrameLayout>