<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/white"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size20"
        android:background="@color/bgColor"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size80"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_property_analyse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:focusable="false"
            android:drawablePadding="@dimen/size5"
            android:drawableTop="@mipmap/myself_zichanfenxi"
            android:gravity="center"
            android:text="资产分析" />

        <View
            android:layout_width="@dimen/size1"
            android:layout_height="@dimen/size50"
            android:layout_gravity="center"
            android:background="@color/bgColor" />

        <TextView
            android:id="@+id/tv_transaction_trends"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="@dimen/size5"
            android:focusable="false"
            android:drawableTop="@mipmap/myself_jiaoyidongtai"
            android:gravity="center"
            android:text="交易动态" />

        <View
            android:layout_width="@dimen/size1"
            android:layout_height="@dimen/size50"
            android:layout_gravity="center"
            android:background="@color/bgColor" />

        <TextView
            android:id="@+id/tv_stock_memoirs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:focusable="false"
            android:drawablePadding="@dimen/size5"
            android:drawableTop="@mipmap/myself_gushihuiyilu"
            android:gravity="center"
            android:text="股市回忆录" />

        <View
            android:layout_width="@dimen/size1"
            android:layout_height="@dimen/size50"
            android:layout_gravity="center"
            android:background="@color/bgColor" />

        <TextView
            android:id="@+id/tv_stock_bill"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="@dimen/size5"
            android:focusable="false"
            android:drawableTop="@mipmap/myself_gushiyuezhangdan"
            android:gravity="center"
            android:text="股市月账单" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size20"
        android:background="@color/bgColor"/>
</LinearLayout>