<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/size13"
        android:layout_marginBottom="@dimen/size13">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size20">

            <TextView
                android:id="@+id/tvHotStockContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="16sp"
                android:textColor="@color/textss"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvHotStockName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textSize="13sp"
                    android:textColor="@color/blue"/>

                <TextView
                    android:id="@+id/tvHotXianJia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size5"
                    android:text="--"
                    android:textSize="13sp"
                    android:textColor="@color/texts"/>

                <TextView
                    android:id="@+id/tvHotBaiFenBi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size5"
                    android:text="--"
                    android:textSize="13sp"
                    android:textColor="@color/texts"/>

                <TextView
                    android:id="@+id/HotStockNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size5"
                    android:text="--"
                    android:textSize="13sp"
                    android:textColor="@color/texts"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size0.5"
        android:layout_marginLeft="@dimen/size20"
        android:layout_alignParentBottom="true"
        android:background="@color/fengexian"/>

</RelativeLayout>
