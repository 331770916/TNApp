<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size20"
        android:layout_marginRight="@dimen/size20"
        android:gravity="center_vertical"
        android:background="@drawable/bg_secc_select">
        <TextView
            android:id="@+id/tv_secc"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txtSize15"
            android:layout_marginLeft="@dimen/size25"
            android:paddingTop="@dimen/size10"
            android:paddingBottom="@dimen/size10"/>
        <ImageView
            android:id="@+id/iv_select_status"
            android:layout_width="@dimen/size18"
            android:layout_height="@dimen/size12"
            android:layout_marginRight="@dimen/size20"
            android:background="@mipmap/secc_select"/>
    </LinearLayout>

</LinearLayout>