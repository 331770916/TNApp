<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size200"
        android:background="@color/white">

        <TextView
            android:id="@+id/tvType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size18"
            android:text="获补贴"
            android:textColor="@color/red"
            android:textSize="15sp" />


        <com.tpyzq.mobile.pangu.view.progress.RoundProgressBar
            android:id="@+id/ZxroundProgressBar"
            android:layout_width="133dp"
            android:layout_height="133dp"
            android:layout_below="@id/tvType"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size10"
            android_custom:roundColor="@color/textDate"
            android_custom:roundProgressColor="@color/red"
            android_custom:roundWidth="5dp"
            android_custom:textColor="@color/black"
            android_custom:start="105"
            android_custom:end="330"
            android_custom:textSize="18sp" />

        <LinearLayout
            android:id="@+id/llShuiBoWen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvType"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size20"
            android:background="@mipmap/zx_shuibowen_zhang"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvGaiLv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上涨概率"
                android:textColor="@color/hushenTab_titleColor"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size3" />

            <!-- 52% -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvBaiFenBi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/red"
                    android:textSize="30sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size0.5"
        android:background="@color/lineColor"/>
    <WebView
        android:id="@+id/wvHotDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/tvAttentionDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size5"
            android:layout_marginLeft="@dimen/size20"
            android:layout_marginTop="@dimen/size5"
            android:text="--"
            android:textColor="@color/text_color"
            android:textSize="13sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size30"
        android:background="@color/bgColor"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可关注下列股票"
                android:textColor="@color/text"
                android:textSize="13sp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
