<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@color/white">
        <View
            android:layout_width="188dp"
            android:layout_height="@dimen/size100"/>
        <RelativeLayout
            android:layout_width="188dp"
            android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvEventTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size21"
                    android:layout_marginLeft="@dimen/size20"
                    android:layout_marginRight="@dimen/size10"
                    android:text="--"
                    android:textColor="@color/textss"
                    android:textStyle="bold"
                    android:lines="3"
                    android:ellipsize="end"
                    android:lineSpacingExtra="1.5dp"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/kongbaifenge"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size10"
                    android:layout_marginLeft="@dimen/size10"
                    android:layout_marginRight="@dimen/size10"
                    android:layout_below="@id/tvEventTitle"/>

                <TextView
                    android:id="@+id/tvEventDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size20"
                    android:layout_marginRight="@dimen/size10"
                    android:layout_marginBottom="@dimen/size22"
                    android:layout_below="@id/kongbaifenge"
                    android:text="--"
                    android:textSize="11sp"
                    android:textColor="@color/texts"/>

        </RelativeLayout>

</RelativeLayout>
