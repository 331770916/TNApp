<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size10"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/newsFromTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="@color/hushenTab_titleColor"
            android:textSize="@dimen/txtSize13" />

        <ImageView
            android:id="@+id/news_item_iv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/size5"
            android:src="@mipmap/hot_iv"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/news_item_iv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/size5"
            android:src="@mipmap/hold_iv"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/newsFromTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/hideTextColor"
            android:textSize="@dimen/txtSize10" />

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/newsFromTimeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/blue3"
            android:textSize="@dimen/txtSize10" />
    </LinearLayout>


    <TextView
        android:id="@+id/newsFromSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size10"
        android:text=""
        android:textColor="@color/hushenTab_titleColor"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/newsFromContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size5"
        android:ellipsize="end"
        android:lineSpacingExtra="1.5dp"
        android:lineSpacingMultiplier="1.1"
        android:maxLines="2"
        android:text=""
        android:textColor="@color/hushenTab_titleColor"
        android:textSize="@dimen/txtSize12" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_height="1px"
        android:background="@color/lineColor"/>

</LinearLayout>