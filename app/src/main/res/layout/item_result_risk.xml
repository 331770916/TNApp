<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/txtSize18">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/RiskEvaluationText"
            android:textSize="@dimen/txtSize20" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size1"
            android:layout_marginTop="@dimen/size10"
            android:background="@color/lineColor" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size10">

        <com.tpyzq.mobile.pangu.view.progress.RoundProgressBar
            android:id="@+id/RoundProgressBar"
            android:layout_width="@dimen/size220"
            android:layout_height="@dimen/size220"
            android:layout_gravity="center"
            app:max="100"
            app:roundColor="@color/lineColor"
            app:roundProgressColor="@color/blue3"
            app:textColor="@android:color/transparent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/size80"
            android:text="@string/RiskEvaluationText1"
            android:textSize="@dimen/txtSize12" />

        <TextView
            android:id="@+id/clasTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/size100"
            android:text="--"
            android:textColor="@color/dateSureColor"
            android:textSize="@dimen/txtSize25" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/size10"
        android:paddingTop="@dimen/size15">

        <TextView
            android:id="@+id/TextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingRight="@dimen/size15"
            android:text="@string/RiskEvaluationText4" />

        <TextView
            android:id="@+id/Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/TextView1"
            android:textSize="@dimen/txtSize13" />
    </RelativeLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/size30"
        android:paddingRight="@dimen/size30"
        android:paddingTop="@dimen/size15">

        <Button
            android:id="@+id/Restart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size10"
            android:background="@drawable/risk_button"
            android:text="我想重新再填一次资料"
            android:textColor="@color/text" />

        <Button
            android:layout_marginTop="@dimen/size15"
            android:id="@+id/Yse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/lonin"
            android:text="确定"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>