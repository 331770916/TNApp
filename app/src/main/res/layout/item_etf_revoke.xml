<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--  ETF申赎撤单 和
     ETF申赎历史查询
     共用一个布局
      底部隐藏部分  -->



    <LinearLayout
        android:id="@+id/fj_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size5"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_stock_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size11"
                android:layout_marginTop="@dimen/size12"
                android:textColor="@color/hushenTab_titleColor"
                android:textSize="@dimen/txtSize14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_stock_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size12"
                android:layout_marginLeft="@dimen/size11"
                android:layout_marginTop="@dimen/size4"
                android:gravity="left"
                android:textColor="@color/newStockTitle"
                android:textSize="@dimen/self_stockNumberText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size5"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_entrust_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/hushenTab_titleColor"
                android:textSize="@dimen/self_stockNumberText" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size13"
                    android:textColor="@color/hushenTab_titleColor"
                    android:textSize="@dimen/txtSize13" />

                <TextView
                    android:id="@+id/tv_blance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size12"
                    android:layout_marginTop="@dimen/size4"
                    android:textColor="@color/hushenTab_titleColor"
                    android:textSize="@dimen/self_stockNumberText" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size21"
                android:layout_marginTop="@dimen/size13"
                android:textColor="@color/hushenTab_titleColor"
                android:textSize="@dimen/txtSize13" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size12"
                android:layout_marginRight="@dimen/size21"
                android:layout_marginTop="@dimen/size4"
                android:textColor="@color/hushenTab_titleColor"
                android:textSize="@dimen/self_stockNumberText" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>