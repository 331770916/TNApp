<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size25"
        android:background="@color/blue"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pickerview_topbar_height"
        android:background="@color/blue">

        <ImageView
            android:id="@+id/ivCurrencyFundRedeem_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:paddingLeft="@dimen/size15"
            android:paddingRight="@dimen/size20"
            android:src="@mipmap/back_btn" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/Gradingfundmerger"
            android:textColor="@color/white"
            android:textSize="@dimen/title_big_textsize" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size10"
            android:background="@color/bgColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size60">

                <TextView
                    android:id="@+id/tvCnFundCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/size20"
                    android:text="@string/JiJinDaiMa"
                    android:textColor="@color/texts"
                    android:textSize="@dimen/txtSize15" />

                <TextView
                    android:textSize="@dimen/size14"
                    android:id="@+id/textView8"
                    android:textColor="@color/texts"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/size25"
                    android:drawablePadding="@dimen/size5"
                    android:drawableRight="@mipmap/icon_right"
                    android:text="@string/choose_fund" />

                <EditText
                    android:id="@+id/editText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/size35"
                    android:layout_toLeftOf="@id/textView8"
                    android:layout_toRightOf="@id/tvCnFundCode"
                    android:background="@null"
                    android:inputType="number"
                    android:gravity="center_vertical"
                    android:hint="@string/QingShuRuJiJinDaiMa"
                    android:maxLength="6"
                    android:singleLine="true"
                    android:textColor="@color/title_list"
                    android:textColorHint="@color/texts"
                    android:textSize="@dimen/txtSize14" />


            </RelativeLayout>

            <!--分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size0.5"
                android:layout_marginLeft="@dimen/size20"
                android:background="@color/stkDetailDividerColor" />

            <!--申购金额-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size60">

                <TextView
                    android:id="@+id/tvCnFundAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/size20"
                    android:text="@string/mergershare"
                    android:textColor="@color/texts"
                    android:textSize="@dimen/txtSize15" />

                <EditText
                    android:id="@+id/amount_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/size35"
                    android:layout_toRightOf="@id/tvCnFundAmount"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/input_mergershare_1"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    android:textColor="@color/title_list"
                    android:textColorHint="@color/texts"
                    android:textSize="@dimen/txtSize14" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size0.5"
                android:layout_marginLeft="@dimen/size20"
                android:background="@color/stkDetailDividerColor" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size20"
                android:background="@color/white" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size50">

                <TextView
                    android:id="@+id/tvCnFundName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/size20"
                    android:text="@string/JiJinMingCheng"
                    android:textColor="@color/texts"
                    android:textSize="@dimen/txtSize15" />

                <TextView
                    android:id="@+id/tvCnFundNameValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/size35"
                    android:layout_toRightOf="@id/tvCnFundName"
                    android:text="--"
                    android:textColor="@color/title_list"
                    android:textSize="@dimen/txtSize14" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size50">

                <TextView
                    android:id="@+id/tvCnFundNetValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/size20"
                    android:text="@string/shareholdercode"
                    android:textColor="@color/texts"
                    android:textSize="@dimen/txtSize15" />

                <TextView
                    android:id="@+id/tvCnFundNetValueValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/size35"
                    android:layout_toRightOf="@id/tvCnFundNetValue"
                    android:text="--"
                    android:textColor="@color/title_list"
                    android:textSize="@dimen/txtSize14" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size50">

                <TextView
                    android:id="@+id/tvCnStockholderNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/size20"
                    android:text="@string/mergerstatus"
                    android:textColor="@color/texts"
                    android:textSize="@dimen/txtSize15" />

                <TextView
                    android:id="@+id/tvStatements"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/size35"
                    android:layout_toRightOf="@id/tvCnStockholderNum"
                    android:text="--"
                    android:textColor="@color/title_list"
                    android:textSize="@dimen/txtSize14" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size50">

                <TextView
                    android:id="@+id/tvCnExpendableFund"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/size20"
                    android:text="@string/mergerdata"
                    android:textColor="@color/texts"
                    android:textSize="@dimen/txtSize15" />

                <TextView
                    android:id="@+id/tvCnExpendableFundValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/size35"
                    android:layout_toRightOf="@id/tvCnExpendableFund"
                    android:text="--"
                    android:textColor="@color/title_list"
                    android:textSize="@dimen/txtSize14" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size20"
                android:background="@color/white" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size1"
            android:background="@color/dividerColor" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/butConfirm"
                android:layout_width="@dimen/size330"
                android:layout_height="@dimen/size40"
                android:layout_marginTop="@dimen/size81"
                android:background="@drawable/lonin4"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/pickerview_submit"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
    <LinearLayout
        android:id="@+id/ll_father"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical" />
</FrameLayout>